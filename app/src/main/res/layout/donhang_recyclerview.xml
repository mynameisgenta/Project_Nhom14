<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout style="@style/linear_dh_recyclerview">

        <LinearLayout style="@style/linear_infor">

            <LinearLayout style="@style/linear_tv">

                <TextView style="@style/tv_title_maddh" />

                <TextView
                    android:id="@+id/tvMaddh"
                    style="@style/tv_content_maddh" />
            </LinearLayout>

            <LinearLayout style="@style/linear_tv">

                <TextView style="@style/tv_title_ngaydat" />

                <TextView
                    android:id="@+id/tvNgaydat"
                    style="@style/tv_content_ngaydat" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout style="@style/linear_img_btn">

            <ImageView
                android:id="@+id/img_edit"
                style="@style/img_edit" />

            <ImageView
                android:id="@+id/img_delete"
                style="@style/img_delete" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>