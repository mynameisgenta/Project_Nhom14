<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="5dp">

    <LinearLayout style="@style/linear_user_recyclerview">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgUserPicture"
            style="@style/List_CircleImageView" />

        <LinearLayout style="@style/linear_user">

            <LinearLayout style="@style/linear_user_recyclerview">

                <TextView style="@style/textview_username" />

                <TextView
                    android:id="@+id/textViewUsername"
                    style="@style/textview_username1" />

            </LinearLayout>

            <LinearLayout style="@style/linear_user_recyclerview">

                <TextView style="@style/textview_fullname" />

                <TextView
                    android:id="@+id/textViewFullName"
                    style="@style/textview_fullname1" />

            </LinearLayout>

            <LinearLayout style="@style/linear_user_recyclerview">

                <TextView style="@style/textview_password" />

                <TextView
                    android:id="@+id/textViewPassword"
                    style="@style/textview_password1" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout style="@style/linear_button_edit">

            <ImageView
                android:id="@+id/img_edit"
                style="@style/img_edit" />

            <ImageView
                android:id="@+id/img_delete"
                style="@style/img_delete" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>