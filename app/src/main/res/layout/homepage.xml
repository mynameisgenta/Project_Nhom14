<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".screen.home.TrangChu">

    <View
        android:id="@+id/bg_top_header"
        style="@style/view_homepage"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        style="@style/user_photo_homepage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/full_name"
        style="@style/fullname_homepage"
        app:layout_constraintStart_toEndOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/position_homepage"
        app:layout_constraintStart_toEndOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="@id/full_name" />

    <ImageView
        android:id="@+id/btnExit"
        style="@style/img_logout_homepage"
        app:layout_constraintStart_toEndOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="parent" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="110dp"
        android:layout_marginBottom="60dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="14dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_top_header"
        app:layout_constraintVertical_bias="0.0"
        app:layout_editor_absoluteX="0dp">

        <androidx.cardview.widget.CardView
            style="@style/cardview_homepage"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <LinearLayout style="@style/linear_homepage">

                <ImageView
                    android:id="@+id/btnQuanLyCty"
                    style="@style/img_cty_homepage" />

                <TextView style="@style/tv_cty_homepage" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cardview_homepage"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <LinearLayout style="@style/linear_homepage">

                <ImageView
                    android:id="@+id/btnQuanLyXe"
                    style="@style/img_xe_homepage" />

                <TextView style="@style/tv_xe_homepage" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cardview_homepage"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <LinearLayout style="@style/linear_homepage">

                <ImageView
                    android:id="@+id/btnDonDatHang"
                    style="@style/img_bill_homepage" />

                <TextView style="@style/tv_bill_homepage" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cardview_homepage"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <LinearLayout style="@style/linear_homepage">

                <ImageView
                    android:id="@+id/btnUser"
                    style="@style/img_user_homepage" />

                <TextView style="@style/tv_user_homepage" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cardview_homepage"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <LinearLayout style="@style/linear_homepage">

                <ImageView
                    android:id="@+id/btn_thongke"
                    style="@style/img_statistics_homepage" />

                <TextView style="@style/tv_statistics_homepage" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            style="@style/cardview_homepage"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <LinearLayout style="@style/linear_homepage">

                <ImageView
                    android:id="@+id/btn_infoapp"
                    style="@style/img_inforapp_homepage" />

                <TextView style="@style/tv_inforapp_homepage" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>